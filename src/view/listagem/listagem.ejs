<!DOCTYPE html>
<html lang="en">

<%- include('../includes/head') %>

<body>

    <%- include('../includes/navbar') %>

    <h1>Lista dos games disponiveis</h1>

    <table>
        <% for(let i = 0; i < games.length; i++){ %>
        <tr>
            <td>
                <div style="background-image: url('<%- games[i].capa %>');" class="game-cover">
            </td>
            <td>
                <a href="games/<%= games[i].id %>">
                    <%= games[i].nome %>
                </a>
            </td>
            <td><%= games[i].dev %></td>
        </tr>
        <% } %>
    </table>


</body>

</html>