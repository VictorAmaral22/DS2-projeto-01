<!DOCTYPE html>
<html lang="en">

<%- include('../includes/head') %>

<body>

    <%- include('../includes/navbar') %>
    <div id="wallpaper" style="background-image: url('<%= game.wallpaper %>');" >
        <div id="margin">
            <h1 id="title"><%= game.nome %></h1>
            <h2 id="subtitle">Desenvolvido por <%= game.dev %></h2>
            <div id="quadrado">
                <p id="genero"><%= generos[game.genero].toUpperCase() %></p>
            </div>
            <% if(user && user.tipo != 1) { %>
            <div id="clickComBorder">
                <p id="addFav" href="/games/<%= game.id %>/add-lista">Adicionar à lista de desejos</p>
            </div>
            <% } %>
            <div id="row2">
                <p>Data de lançamento:</p>
                <p><%= game.datalanc %></p>
            </div>
        </div>
    </div>
    <div id="info">
        <h2 align="center" id="h2font">Informações gerais</h2>
        <div id="outraCor">
            <p id="lineHeight"><%= game.sinopse %></p>
        </div>
    </div>
    <br/><br/>
    <% if(user && user.tipo == 1) { %>
        <a href="/games/<%= game.id %>/alterar">ALTERAR</a>
        <br/><br/>
        <a href="/games/<%= game.id %>/deletar">DELETAR</a>
    <% } %>
</body>
</html>